{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",

    "strict": true,

    "declaration": true,
    "baseUrl": "./",
    "paths": {
      "path": ["https://external.url/path.js"],
      "@*": ["*"]
    },

    "esModuleInterop": true,

    "plugins": [
      { "transform": "../../" },
      { "transform": "../../", "afterDeclarations": true }
    ]
  }
}
